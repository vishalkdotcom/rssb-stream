<?xml version="1.0" encoding="utf-8"?>
<!--
   Sample data extraction rules file; uncomment and customize as necessary.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude large downloaded media files to save bandwidth and storage.
             The app should handle missing files gracefully or re-download them. -->
        <exclude domain="file" path="downloads"/>
    </cloud-backup>
    <device-transfer>
        <!-- Exclude large downloaded media files.
             Users can re-download content on the new device. -->
        <exclude domain="file" path="downloads"/>
    </device-transfer>
</data-extraction-rules>